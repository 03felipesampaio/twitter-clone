<%- include('templates/header'); -%>

    <section class="user-profile">
        <img id="profile-pic" src="/imgs/profile-img.png" alt="">
        
        <div id="name"><%= author.name %> </div>
        <div id="user" >@<%= author.user %> </div>
        <p id="decription" ><%= author.descr %> </p>
    </section>

  <!-- Tweets Area -->
  <div class="tweets-area">

    <!-- Print all tweets avaliable -->
    <% tweets.forEach(tweet=> { %>

      <div class="tweet">
        <!-- Profile Image   -->
        <img src="/imgs/profile-icon.png" alt="Default twitter icon" class="rounded-circle icon-profile">

        <div class="tweet-body">

          <!-- Tweet header -->
          <div class="tweet-header">

            <form style="display: inline;" action="/users/<%=tweet.author%>" method="get">
              <!-- Name -->
              <input type="submit" value="<%= tweet.name %>" name="id">
            </form>

            <div class="d-inline small">

              <!-- User @ -->
              <div class="d-inline author">
                <%= '@' + tweet.author %>
              </div>

              <!-- Timestamp -->
              <!-- <div class="d-inline">- <%= tweet.date %></div> -->

            </div>

            <form action=<%='/delete/' +tweet.id %> method="post">

              <button class="btn-delete ml-auto" type="submit">Apagar</button>

            </form>
          </div>

          <!-- Tweet content -->
          <p class="tweet-content">
            <%= tweet.content %>
          </p>

          <!-- Tweet footer -->
          <div class="tweet-footer">

            <!-- Comments -->
            <div class="footer-item comment"><i class="far fa-comment"></i>
              <%=' '+tweet.cmmnts %></div>
            
            <!-- Retweets -->
            <div class="footer-item rt"><i class="fas fa-retweet"></i><%= ' '+tweet.rts %></div>
            
            <!-- Likes -->
            <div class="footer-item like">
                  <i class="far fa-heart"></i><%= ' '+tweet.likes %>
            </div>
            
          </div>
          
        </div>
      </div>
          
      <% }) %>
  </div>

<%- include('templates/footer'); -%>